{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "ES2015",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./", // Ensure baseUrl is set
        "paths": { // Add paths for alias
            "@/*": ["src/*"]
        },
        "lib": [
            "ES2015",
            "DOM"
        ]
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}